#include <iostream>
#include <cstring>
using namespace std;

int main()
{
	while(1){
	char teleport;
	char str[30];
	int beg, end, length;
	int condition = 0;
	
	cout << "Enter a word: ";
	cin.getline(str, 30);
	length = strlen(str);
	
	for (beg = 0, end = length-1; beg <= length/2; beg++, end--)
	{
		if(str[beg] != str[end])
		{
			condition = 1;
			break;
		}
	}
	
	if (condition == 0)
	cout << str << " is a palindrome.\n";
	else if (condition == 1)
	cout << str << " is not a palindrome.\n";

}
	
	return 0;
}
