#include <iostream>
#include <cctype>
using namespace std;

void reverse()
{
	char letter[50];
	int space;
	string word[50];
	
	cout << "Enter a string: ";
	cin.getline(letter, 50);
	
	int i, count = -1, checker = 0;
	
	for (i = 0; letter[i] != '\0'; i++)
	{
		checker++;
	}
	for (i = 0; letter[i] != '\0'; i++)
	{
		count++;
		if (!isspace(letter[i]) && i < checker)
		{
			while(!isspace(letter[i]) && i < checker)
			{
				word[count] = word[count] + letter[i];
				if(isspace(letter[i]));
				i++;
			}
		}
		space = count;
	}
	space++;
	for (i = space; i >=0; i--)
	{
		cout << word[i] << "\n";
	}
}

int main()
{
	reverse();
	return 0;
}
