#include <iostream>
#include <cstring>

using namespace std;
int main()
{
	char str1[20];
	char str2[20];
		cout << "\n   String Concatenation (strcat)\n";
		cout << " -------------------------------------\n" << endl;
	    cout << " Enter the first word: ";
		cin.getline(str1, 20);
		cout << " Enter the second word: ";
		cin.getline(str2, 20);
		cout << strcat(str1, str2) << endl;
return 0;	
}
